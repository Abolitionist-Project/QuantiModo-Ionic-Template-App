{
  "manifest_version": 2,
  "name": "MedTLC Medication Tracker",
  "description": "Effortless medication-tracking right in your browser.",
  "version": "1.1.5",
  "options_page": "options/options.html",
  "icons": {
    "16"	: "images/medtlc_icon_16.png",
    "48"	: "images/medtlc_icon_48.png",
    "128"	: "images/medtlc_icon_128.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "cookies",
    "tabs",
    "https://app.quantimo.do/*",
    "*://cdn.rawgit.com/*"
  ],
  "browser_action": {
    "default_icon": "images/medtlc_icon_350.png",
    "default_popup": "app.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
} 
