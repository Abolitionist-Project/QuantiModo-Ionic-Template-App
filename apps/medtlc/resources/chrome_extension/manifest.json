{
  "manifest_version": 2,
  "name": "MedTLC Extension",
  "description": "Medication - Track. Learn. Connect.",
  "version": "IONIC_APP_VERSION_NUMBER",
  "options_page": "www/chrome_extension/options/options.html",
  "icons": {
    "16"	: "www/img/icon_16.png",
    "48"	: "www/img/icon_48.png",
    "128"	: "www/img/icon_128.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "cookies",
    "tabs",
    "https://app.quantimo.do/*",
    "*://cdn.rawgit.com/*"
  ],
  "browser_action": {
    "default_icon": "www/img/icon_700.png",
    "default_popup": "www/templates/chrome/reminders-inbox-iframe.html"
  },
  "background": {
    "scripts": ["www/js/chrome/background.js"],
    "persistent": false
  }
}
